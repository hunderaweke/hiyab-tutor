# =============================================================================
# Hiyab Tutor Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in the actual values
# DO NOT commit .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# JWT Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT token generation and validation
# Generate a strong random string (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# -----------------------------------------------------------------------------
# Admin Credentials
# -----------------------------------------------------------------------------
# Default admin account credentials
# These will be used to create the initial admin user
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Frontend/Dashboard URL (used for CORS and redirects)
WEB_APP_URL=http://localhost

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port on which the backend API will run
SERVER_PORT=8080

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
# Database connection details
BLUEPRINT_DB_HOST=localhost
BLUEPRINT_DB_PORT=5432
BLUEPRINT_DB_DATABASE=hiyab_tutor
BLUEPRINT_DB_USERNAME=postgres
BLUEPRINT_DB_PASSWORD=your-secure-database-password
BLUEPRINT_DB_SCHEMA=public

# Full database connection URL (alternative to individual settings)
# BLUEPRINT_DB_URL=postgresql://postgres:password@localhost:5432/hiyab_tutor

# -----------------------------------------------------------------------------
# Frontend Configuration (Optional)
# -----------------------------------------------------------------------------
# Port for frontend in production
FRONTEND_PORT=80

# -----------------------------------------------------------------------------
# Dashboard Configuration (Optional)
# -----------------------------------------------------------------------------
# Port for admin dashboard in production
DASHBOARD_PORT=3000

# -----------------------------------------------------------------------------
# File Upload Configuration (Optional)
# -----------------------------------------------------------------------------
# Maximum file upload size in MB
# MAX_UPLOAD_SIZE=10

# Allowed file types
# ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
# ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv
# ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# -----------------------------------------------------------------------------
# Email Configuration (Optional - for future use)
# -----------------------------------------------------------------------------
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@hiyabtutor.com

# -----------------------------------------------------------------------------
# Storage Configuration (Optional - for cloud storage)
# -----------------------------------------------------------------------------
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=hiyab-tutor-uploads

# -----------------------------------------------------------------------------
# Logging Configuration (Optional)
# -----------------------------------------------------------------------------
# LOG_LEVEL=info
# LOG_FORMAT=json

# -----------------------------------------------------------------------------
# Security Configuration (Optional)
# -----------------------------------------------------------------------------
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_DURATION=1m

# -----------------------------------------------------------------------------
# Production Deployment Notes
# -----------------------------------------------------------------------------
# For VPS deployment:
# 1. Generate strong random values for all secrets
# 2. Update WEB_APP_URL to your domain (e.g., https://hiyabtutor.com)
# 3. Use strong database credentials
# 4. Consider using environment-specific .env files (.env.production, .env.staging)
# 5. Ensure SSL/TLS certificates are configured for HTTPS
# =============================================================================
